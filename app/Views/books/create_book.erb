<% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %>

<h1>Create a Book</h1>

<form action="/books" method="post">
  <p>Book Title:<input type="text" id="title" name="title" id="book_title"></p>
  <p>Book Blurb:<input type="text" id="blurb" name="blurb" id="book_blurb"></p>
  <p>Book author:<input type="text" id="author" name="author" id="book_author"></p>
  <input type="submit" id="submit" value="Tweet">
</form>
